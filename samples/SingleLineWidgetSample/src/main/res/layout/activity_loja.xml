<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33ecef3d"
    tools:context="com.myscript.atk.sltw.sample.Activity.Usuario_Loja">

    <LinearLayout
        android:id="@+id/layoutLoja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="55dp"
                    android:text="Imagens de Fundo"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/al_btnEsqFundo"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/sltw_arrowleft" />

                    <ImageView
                        android:id="@+id/al_imgFundo"
                        android:layout_width="match_parent"
                        android:layout_height="133dp"
                        android:layout_marginLeft="75dp"
                        android:layout_marginRight="75dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true" />

                    <Button
                        android:id="@+id/al_btnDirFundo"
                        android:layout_width="123dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/sltw_arrowright" />

                </LinearLayout>

                <TextView
                    android:id="@+id/al_txtPrecoFundo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="220dp"
                    android:layout_marginRight="200dp"
                    android:layout_marginTop="-10dp"
                    android:scaleType="center"
                    android:text="Preço: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="55dp"
                    android:text="Avatares"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/al_btnEsqMsg"
                        android:layout_width="67dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/sltw_arrowleft" />

                    <ImageView
                        android:id="@+id/al_imgMsg"
                        android:layout_width="218dp"
                        android:layout_height="133dp"
                        android:layout_marginLeft="75dp"
                        android:layout_marginRight="75dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/al_btnDirMsg"
                        android:layout_width="67dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/sltw_arrowright" />
                </LinearLayout>

                <TextView
                    android:id="@+id/al_txtPrecoMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="220dp"
                    android:layout_marginRight="200dp"
                    android:layout_marginTop="-10dp"
                    android:scaleType="center"
                    android:text="Preço: "
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/al_btnSalvar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:text="Comprar" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="604dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:background="#1ecfe2"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/edtPontGeral"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:inputType="number"
            android:selectAllOnFocus="false"
            android:text="0"
            android:textColor="@android:color/background_dark"
            tools:clickable="false" />

        <TextView
            android:id="@+id/edtNomeLoja"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:inputType="text"
            android:selectAllOnFocus="false"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            tools:clickable="false" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
