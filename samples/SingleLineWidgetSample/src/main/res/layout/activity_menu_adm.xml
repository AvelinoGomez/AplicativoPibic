<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33ecef3d"
    tools:context="com.myscript.atk.sltw.sample.Activity.Admin_Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ama_edtNomeMenu"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:selectAllOnFocus="false"
                android:textColorLink="@android:color/black"
                android:textSize="18sp"
                tools:clickable="false" />

            <Button
                android:id="@+id/ama_btnSair"
                android:layout_width="47dp"
                android:layout_height="36dp"
                android:layout_marginLeft="110dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:text="X" />

        </LinearLayout>

        <Button
            android:id="@+id/ama_btnListarAlunos"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:layout_marginTop="50dp"
            android:layout_x="196dp"
            android:layout_y="56dp"
            android:text="Listar" />

        <Button
            android:id="@+id/ama_btnConfiguracoes"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:layout_marginTop="50dp"
            android:layout_x="195dp"
            android:layout_y="170dp"
            android:text="Configurações" />

    </LinearLayout>

</LinearLayout>
