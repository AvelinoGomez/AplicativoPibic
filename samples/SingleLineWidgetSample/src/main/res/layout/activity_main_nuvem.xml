<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#33ecef3d"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layoutTeclado"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.myscript.atk.sltw.SingleLineWidget
            android:id="@+id/singleLine_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_x="2dp"
            android:layout_y="168dp">

        </com.myscript.atk.sltw.SingleLineWidget>

        <AbsoluteLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_y="0dp">

            <ImageView
                android:id="@+id/viewAvatar"
                android:layout_width="97dp"
                android:layout_height="74dp"
                android:layout_x="136dp"
                android:layout_y="27dp"
                android:background="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/texto"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/layout"
                android:layout_alignEnd="@+id/confirmar"
                android:layout_alignRight="@+id/confirmar"
                android:layout_x="0dp"
                android:layout_y="44dp"
                android:textSize="18sp" />

        </AbsoluteLayout>

        <Button
            android:id="@+id/confirmar"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/layout"
            android:layout_marginEnd="43dp"
            android:layout_marginRight="43dp"
            android:layout_marginTop="81dp"
            android:layout_x="476dp"
            android:layout_y="169dp"
            android:text="Ok"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/txtPontuacao"
            android:layout_width="159dp"
            android:layout_height="25dp"
            android:layout_alignEnd="@+id/confirmar"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/confirmar"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:autoText="false"
            android:inputType="number" />

        <ImageView
            android:id="@+id/imgPrimeiraVida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/layout"
            android:layout_toRightOf="@+id/layout" />

        <ImageView
            android:id="@+id/imgSegundaVida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgPrimeiraVida"
            android:layout_toRightOf="@+id/imgPrimeiraVida" />

        <ImageView
            android:id="@+id/imgTerceiraVida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgSegundaVida"
            android:layout_toRightOf="@+id/imgSegundaVida" />

    </RelativeLayout>


</AbsoluteLayout>