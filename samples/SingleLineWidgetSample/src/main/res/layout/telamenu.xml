<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_telamenu"
    android:background="#33ecef3d">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtPontGeral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="number"
                android:selectAllOnFocus="false"
                android:text="0"
                tools:clickable="false" />

            <EditText
                android:id="@+id/edtNomeMenu"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:selectAllOnFocus="false"
                android:textColorLink="@android:color/black"
                android:textSize="18sp"
                tools:clickable="false" />

            <Button
                android:id="@+id/btnSair"
                android:layout_width="54dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="X" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonJogar"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="-49dp"
            android:layout_marginEnd="125dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="50dp"
            android:layout_x="196dp"
            android:layout_y="56dp"
            android:onClick="IrParaTelaJogar"
            android:text="Jogar" />

        <Button
            android:id="@+id/buttonLoja"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="-49dp"
            android:layout_marginEnd="125dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="50dp"
            android:text="Loja" />

        <Button
            android:id="@+id/buttonConfig"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="-49dp"
            android:layout_marginEnd="125dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="50dp"
            android:layout_x="195dp"
            android:layout_y="170dp"
            android:onClick="IrParaTelaConfig"
            android:text="Configurações" />

    </LinearLayout>

</RelativeLayout>