<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#33ecef3d"
    android:id="@+id/layout_telaconfig"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtPontGeralConf"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:inputType="number"
            android:selectAllOnFocus="false"
            android:text="0"
            android:textColor="@android:color/background_dark"
            tools:clickable="false" />

        <EditText
            android:id="@+id/edtNomeConf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:inputType="text"
            android:selectAllOnFocus="false"
            android:textColor="@android:color/background_dark"
            android:textColorLink="@android:color/black"
            android:textSize="18sp"
            tools:clickable="false" />

    </LinearLayout>

    <Button
        android:id="@+id/tc_paletaCores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="160dp"
        android:text="Cor do lÃ¡pis" />

    <Button
        android:id="@+id/tc_paletaPapel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="160dp"
        android:text="Cor do papel" />


</LinearLayout>