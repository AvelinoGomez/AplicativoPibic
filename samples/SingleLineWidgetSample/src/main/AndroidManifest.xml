<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myscript.atk.sltw.sample">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Reconhecimento Manuscrito "
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.Login_activity"
            android:configChanges="orientation|screenSize"
            android:label="PIBIC"
            android:noHistory="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Usuario_Config"
            android:noHistory="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity.Usuario_Jogando"
            android:noHistory="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity.Usuario_Menu"
            android:noHistory="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity.CadastroActivity"
            android:noHistory="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Activity.Admin_ListarUsuarios" />
        <activity android:name=".Activity.Admin_Menu" />
        <activity android:name=".Activity.Admin_Config" />
        <activity android:name=".Activity.Usuario_AdicionarPalavra"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".Activity.Usuario_Loja"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity.Usuario_CoresLapis"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity.Usuario_CoresBackground"
            android:screenOrientation="landscape" />
        <activity android:name=".Activity.Admin_AbrirUsuario"
            android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>